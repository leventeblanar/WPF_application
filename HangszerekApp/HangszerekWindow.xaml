<Window x:Class="HangszerekApp.HangszerekWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hangszerek" Height="450" Width="800">
    <Grid>
        <!-- Táblázat -->
        <DataGrid Name="HangszerekGrid" AutoGenerateColumns="True" Margin="10,10,10,50"/>

        <!-- Gombok -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Hozzáadás" Width="100" Margin="5" Click="AddHangszer_Click"/>
            <Button Content="Módosítás" Width="100" Margin="5" Click="EditHangszer_Click"/>
            <Button Content="Törlés" Width="100" Margin="5" Click="DeleteHangszer_Click"/>
        </StackPanel>
    </Grid>
</Window>
