<Window x:Class="HangszerekApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HangszerekApp"
        mc:Ignorable="d"
        Title="HangszerekApp" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <Button Content="Hangszerek" Width="200" Height="50" Click="OpenHangszerek" />
            <Button Content="Ügyfelek" Width="200" Height="50" Click="OpenUgyfelek" />
            <Button Content="Rendelések" Width="200" Height="50" Click="OpenRendelesek" />
            <Button Content="Rendelési Tételek" Width="200" Height="50" Click="OpenRendelesTetel" />
            <Button Content="Szállítók" Width="200" Height="50" Click="OpenSzallitok" />
        </StackPanel>
    </Grid>
</Window>



